php artisan make:provider ServiceProviderName      // will make service provider in app/Providers

//----------------
use App\Helpers\ClassName;
use App\Helpers\AnotherClassName;

puablic function register()
{
    $this->app->bind('App\Helpers\Contracts\SaveStr', function() {      // contract name  (we can use singleton() instead of bind())
        return new ClassName();                                         // ClassName for this contract
       // return new AnotherClassName();                                // another ClassName for this contract
    });
}

//-----------------------------
// after we need to register it in config/app.php in providers => []

